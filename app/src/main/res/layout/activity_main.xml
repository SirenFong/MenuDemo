<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_thoat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="Thoát"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editText_MaSo"
            android:layout_width="92dp"
            android:layout_height="40dp"
            android:hint="nhập mã" />

        <EditText
            android:id="@+id/editText_HoTen"
            android:layout_width="297dp"
            android:layout_height="40dp"
            android:hint="nhập họ tên" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_GioiTinh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giới tính: "
            android:textSize="20dp"
            android:paddingTop="25px"/>

        <RadioGroup
            android:id="@+id/radiofroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/radioButton_Nam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nam"
                android:textSize="20dp" />

            <RadioButton
                android:id="@+id/radioButton_Nu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nữ"
                android:textSize="20dp"
                />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView_DonVi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Phòng ban: "/>

        <Spinner
            android:id="@+id/spinner_DonVi"
            android:layout_width="271dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <Button
            android:id="@+id/button_Them"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm"
            android:textSize="15dp"
            android:layout_marginRight="25px"/>

        <Button
            android:id="@+id/button_Xoa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xóa"
            android:textSize="15dp"
            android:layout_marginRight="25px"/>
        <Button
            android:id="@+id/button_Sua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sửa"
            android:textSize="15dp"
            android:layout_marginRight="25px"/>
    </LinearLayout>

    <ImageView android:id="@+id/imageActivity"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:src="@drawable/daidien"
        android:layout_gravity="center"
        android:scaleType="center"/>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <Button android:id="@+id/button_LayAnh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lấy ảnh"/>

        <Button android:id="@+id/button_ChupHinh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chụp hình"/>
    </LinearLayout>

    <ListView
        android:id="@+id/listViewNV"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

    </ListView>
</androidx.appcompat.widget.LinearLayoutCompat>